<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_production_lot_form_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.form.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <!-- condition -->
                <field name="show_cafe_vert_fields" invisible="1"/>

                <field name="x_espece"
                       string="Espèce"
                       invisible="not show_cafe_vert_fields"/>
                <field name="x_origine"
                       string="Origine"
                       invisible="not show_cafe_vert_fields"/>
                <field name="x_screen_size"
                       string="Screen Size"
                       invisible="not show_cafe_vert_fields"/>
                <field name="responsable_pesee"
                       string="Responsable Pesée"
                       invisible="not show_cafe_vert_fields"/>
            </xpath>
        </field>
    </record>
</odoo>
